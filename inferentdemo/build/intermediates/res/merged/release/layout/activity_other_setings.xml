<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/control_direction"
        android:layout_width="242dp"
        android:layout_height="242dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="314dp"
        android:background="@drawable/other_control_circle_bg">

        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="94dp"
            android:layout_height="94dp"
            android:layout_centerInParent="true"
            android:background="@drawable/control_ok_blue_circle_bg"
            android:gravity="center"
            android:text="OK"
            android:textColor="#ffffff"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/btn_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="18dp"
            android:src="@drawable/icn_triangle_up" />

        <ImageView
            android:id="@+id/btn_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:padding="18dp"
            android:src="@drawable/icn_triangle_lower" />

        <ImageView
            android:id="@+id/btn_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="18dp"
            android:src="@drawable/icn_triangle_left" />

        <ImageView
            android:id="@+id/btn_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="18dp"
            android:src="@drawable/icn_triangle_right" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="104dp">

        <TextView
            android:id="@+id/control_menu"
            android:layout_width="90dp"
            android:layout_height="56dp"
            android:background="@drawable/radiu_rect_background"
            android:gravity="center"
            android:letterSpacing="-0.01"
            android:text="菜单"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/control_huazhonghua"
            android:layout_width="90dp"
            android:layout_height="56dp"
            android:layout_below="@id/control_menu"
            android:layout_marginTop="44dp"
            android:background="@drawable/radiu_rect_background"
            android:gravity="center"
            android:letterSpacing="-0.01"
            android:text="画中画"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/control_tvav"
            android:layout_width="90dp"
            android:layout_height="56dp"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@id/control_menu"
            android:background="@drawable/radiu_rect_background"
            android:gravity="center"
            android:letterSpacing="-0.01"
            android:text="TV/AV"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/control_pingxian"
            android:layout_width="90dp"
            android:layout_height="56dp"
            android:layout_alignLeft="@id/control_tvav"
            android:layout_alignTop="@id/control_huazhonghua"
            android:background="@drawable/radiu_rect_background"
            android:gravity="center"
            android:letterSpacing="-0.01"
            android:text="屏显"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="62dp"
            android:layout_height="158dp"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@id/control_tvav"
            android:background="@drawable/radiu_rect_background">

            <ImageView
                android:id="@+id/column_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:padding="13dp"
                android:src="@drawable/icn_add" />

            <ImageView
                android:id="@+id/column_reduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="12dp"
                android:padding="13dp"
                android:src="@drawable/icn_reduce" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:letterSpacing="-0.01"
                android:text="vol"
                android:textColor="#ffffff"
                android:textSize="20sp" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="#3f5769">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="14dp"
            android:src="@drawable/icn_close_big" />
    </RelativeLayout>
</RelativeLayout>
